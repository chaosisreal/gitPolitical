<div class="container">
    <div class="row">
        <div class="col-md-8">

            <h1 class="page-header">
                Welcome to your Dashboard
            </h1>

            <h3>Submit a Topic</h3>
            <form method="post" action="/profile/topic" name="sentTopic" id="topicForm" novalidate>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Full Name:</label>
                        <input type="text" class="form-control" name="topic" id="topic" required data-validation-required-message="Whats your topic?">
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Phone Number:</label>
                        <input type="tel" class="form-control" name="message" id="message" required data-validation-required-message="Tell people what your topic is about...">
                    </div>
                </div>
                <div id="success"></div>
                <!-- For success/fail messages -->
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>
<!-- Container -->
